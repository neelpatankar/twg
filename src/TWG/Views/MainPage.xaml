<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             xmlns:i18n="clr-namespace:TWG.i18n;assembly=TWG"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             xmlns:windows="clr-namespace:Xamarin.Forms.PlatformConfiguration.WindowsSpecific;assembly=Xamarin.Forms.Core"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:dataTemplateSelector="clr-namespace:TWG.DataTemplateSelector"
             Title="All weigh tag data inquiry"
             NavigationPage.HasBackButton="False"
             x:Class="TWG.Views.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Command="{Binding LogoutCommand}"
                      Icon="Setting.png">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <dataTemplateSelector:GridDataTemplateSelector x:Key="GridTemplateSelector" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid RowSpacing="0"
              ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="65" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  RowSpacing="0"
                  ColumnSpacing="0"
                  Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="17" />
                    <RowDefinition Height="40" />

                </Grid.RowDefinitions>
                <Label Text="Start date"
                       FontAttributes="Bold"
                       HeightRequest="10"
                       FontSize="Default"
                       Grid.Column="0"
                       Grid.Row="0" />
                <Label Text="Crush site"
                       FontSize="Default"
                       HeightRequest="10"
                       Grid.Column="1"
                       FontAttributes="Bold"
                       Grid.Row="0" />
                <DatePicker Grid.Row="1"
                            VerticalOptions="FillAndExpand"
                            FontSize="Default"
                            HeightRequest="15"
                            HorizontalOptions="FillAndExpand"
                            Date="{Binding startDate , Mode=TwoWay}"
                            MaximumDate="{x:Static sys:DateTime.Now}"
                            Grid.Column="0" />
                <!--<DatePicker Grid.Row="1" FontSize="Small"  HeightRequest="15" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" MaximumDate="{x:Static sys:DateTime.Now}"  Date="{Binding endDate, Mode=TwoWay}"
                            Grid.Column="1" />-->
                <Entry VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                       FontSize="Default"
                       HeightRequest="15"
                       Text="{Binding crushID}"
                       Grid.Column="1"
                       Grid.Row="1" />
                <Button HeightRequest="28"
                        Text="Search"
                       
                        Command="{Binding RefreshCommand}"
                        Grid.Column="2"
                        Grid.Row="1" />
            </Grid>
            <StackLayout  Grid.Row="1"

                          BackgroundColor="Red">
                <ListView  HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           BackgroundColor="White"
                           x:Name="ItemsListView"
                           ItemTemplate="{StaticResource GridTemplateSelector}"
                           HasUnevenRows="true"
                           RefreshCommand="{Binding RefreshCommand}"
                           ItemsSource="{Binding CellList}"
                           CachingStrategy="RecycleElement">

                </ListView>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>